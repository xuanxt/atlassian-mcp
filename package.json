{
  "name": "@xuandev/atlassian-mcp",
  "version": "1.0.4",
  "description": "MCP server for Atlassian Confluence and Jira Cloud APIs",
  "main": "src/index.ts",
  "type": "module",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xuanxt/atlassian-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/xuanxt/atlassian-mcp/issues"
  },
  "homepage": "https://github.com/xuanxt/atlassian-mcp#readme",
  "scripts": {
    "start": "node --import tsx src/index.ts",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test src/common/config.test.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "prepublishOnly": "bun run check && bun run test:unit",
    "release:patch": "npm version patch -m 'chore: release v%s'",
    "release:minor": "npm version minor -m 'chore: release v%s'",
    "release:major": "npm version major -m 'chore: release v%s'"
  },
  "bin": {
    "atlassian-mcp": "./src/index.ts"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.js",
    "README.md",
    ".env.example",
    ".atlassian-mcp.json.example"
  ],
  "keywords": [
    "mcp",
    "atlassian",
    "confluence",
    "jira",
    "model-context-protocol",
    "claude",
    "ai",
    "assistant"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "commander": "^14.0.2",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
